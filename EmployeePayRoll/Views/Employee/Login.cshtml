   @model ModelLayer.Employeemodel.RegisterModel
@{
    ViewData["Title"] = "Login";

}

<h1>Login</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group m-3">
                    <div class="d-flex flex-row">
                        <label asp-for="EMPLOYEEID" class="control-label" style="margin-right:100px;margin-left:-10px"></label>
                        <input asp-for="EMPLOYEEID" class="form-control ml-5" style="margin-left:30px; margin-right:-10px;" placeholder="Enter Your Id" />
                    </div>
                    <span asp-validation-for="EMPLOYEEID" class="text-danger"></span>
                </div>


                <div class="form-group m-3">
                    <div class="d-flex flex-row">
                        <label asp-for="EMPLOYEENAME" class="control-label" style="margin-right:100px;margin-left:-10px"></label>
                        <input asp-for="EMPLOYEENAME" class="form-control ml-5" style="margin-left:0px; margin-right:-10px;" placeholder="Enter Your Name" />
                    </div>
                    <span asp-validation-for="EMPLOYEENAME" class="text-danger"></span>
                </div>

                <div class="form-group m-1">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}